/* components/modal/modal.wxss */
.modal-wrapper {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 525rpx;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    background-color: #fff;
    border-radius: 26rpx;
    overflow: hidden;
}

.modal-mask{
    width: 100%;
    height: 100%;
    position: fixed;
    opacity: 0.56;
    background-color: #000000;
}
.modal-info {
    width: 100%;
    font-size: 36rpx;
    font-family: Source Han Sans CN;
    font-weight: 500;
    color: #000000;
    background: linear-gradient(0deg, rgba(255, 255, 255, 0.2), rgba(93, 181, 255, 0.2));
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    padding-top: 41rpx;
}

.modal-area {
    flex: 1;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-top: 80rpx;
}

.modal-input {
    width: 459rpx;
    box-sizing: border-box;
    height: 87rpx;
    background-color: rgba(240, 246, 251, 1.000000);
    border-radius: 12rpx;
    font-size: 30rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    color: #000000;
    text-align: center;
}
.modal-text{
    width: 459rpx;
    box-sizing: border-box;
    background-color: rgba(240, 246, 251, 1.000000);
    border-radius: 12rpx;
    padding: 10rpx;
    font-size: 30rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    color: #000000;
    text-align: center;
    color: rgb(176, 177, 178);
}
.modal-btn{
    padding: 55rpx 32rpx 50rpx 32rpx;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.modal-btn-single{
    justify-content: space-around;
}
.modal-btn-cancel {
    color: rgba(29, 140, 250, 1);
    font-size: 28rpx;
    font-family: SourceHanSansCN-Regular;
    font-weight: normal;
    text-align: center;
    white-space: nowrap;
    line-height: 37rpx;
    width: 193rpx;
    height: 75rpx;
    border: 2px solid #1D8CFA;
    border-radius: 39rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-btn-sure {
    height: 79rpx;
    width: 190rpx;
    display: flex;
    margin: 0;
    align-items: center;
    justify-content: center;
    overflow-wrap: break-word;
    color: rgba(255, 255, 255, 1);
    font-size: 28rpx;
    font-family: SourceHanSansCN-Regular;
    font-weight: normal;
    text-align: center;
    white-space: nowrap;
    line-height: 37rpx;
    background: linear-gradient(175deg, #198AFA, #5DB5FF);
    border-radius: 39rpx;
}